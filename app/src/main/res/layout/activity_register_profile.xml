<?xml version="1.0" encoding="utf-8"?>
<com.cqyw.smart.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white2">

    <!-- action bar-->
    <android.support.percent.PercentRelativeLayout
        style="@style/actionBar_style"
        app:layout_heightPercent="8%p">
        <ImageView
            android:id="@+id/register_profile_back"
            app:layout_heightPercent="50%p"
            style="@style/actionBar_back_style"/>
        <TextView
            android:text="注册"
            app:layout_heightPercent="50%p"
            style="@style/actionBar_title_style"
            />
        <TextView
            android:id="@+id/register_done"
            android:text="完成"
            app:layout_heightPercent="50%p"
            style="@style/actionBar_nextStep_style"
            />
    </android.support.percent.PercentRelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="5%p"
        app:layout_widthPercent="25%p"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:text="上传头像"/>
    </LinearLayout>
    <!-- 三个信息输入框-->
    <com.cqyw.smart.view.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%p"
        app:layout_marginTopPercent="4%p"
        android:background="@android:color/white"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            app:layout_widthPercent="20%"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_dark"
            android:text="昵称"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/register_nickname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/text_gray_dark"
            android:textSize="16sp"
            android:singleLine="true"
            app:layout_widthPercent="80%"
            android:inputType="phone"
            android:textColorHint="@color/hint_color"
            android:background="@android:color/transparent"/>
    </com.cqyw.smart.view.PercentLinearLayout>

    <View
        android:layout_width="0dp"
        app:layout_widthPercent="90%p"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/input_box_divider_width"
        android:background="@color/hint_color"/>

    <com.cqyw.smart.view.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%p"
        android:background="@android:color/white"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            app:layout_widthPercent="20%"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="性别"
            android:textSize="18sp"
            android:textColor="@color/text_dark"
            />
        <RadioButton
            android:id="@+id/register_gender_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:button="@drawable/btn_radio"
            android:text=" 女"
            android:textColor="@color/text_gray_dark"
            />
        <RadioButton
            android:id="@+id/register_gender_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:button="@drawable/btn_radio"
            android:text=" 男"
            android:textColor="@color/text_gray_dark"

            />
    </com.cqyw.smart.view.PercentLinearLayout>

    <View
        android:layout_width="0dp"
        app:layout_widthPercent="90%p"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/input_box_divider_width"
        android:background="@color/hint_color"/>

    <com.cqyw.smart.view.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%p"
        android:background="@android:color/white"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            app:layout_widthPercent="20%"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="生日"
            android:textSize="18sp"
            android:textColor="@color/text_dark"
            />
        <EditText
            android:id="@+id/register_birthday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="选择生日"
            android:editable="false"
            android:textColor="@color/text_gray_dark"
            app:layout_widthPercent="80%"
            android:inputType="phone"
            android:textColorHint="@color/hint_color"
            android:background="@android:color/transparent"/>
    </com.cqyw.smart.view.PercentLinearLayout>
</com.cqyw.smart.view.PercentLinearLayout>