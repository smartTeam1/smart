<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="254dp" android:layout_height="334dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="320dp"
        android:background="@drawable/rounded_stroke_rect_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请完成身份验证"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/eduMail_way"
            android:layout_marginTop="40dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_white_bg"
            android:text="edu邮箱验证"
            android:textColor="@color/theme_color"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/ecard_way"
            android:layout_marginTop="30dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_white_bg"
            android:text="校园卡认证"
            android:textColor="@color/theme_color"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/system_way"
            android:layout_marginTop="30dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_white_bg"
            android:text="教务系统认证"
            android:textColor="@color/theme_color"
            android:textSize="16sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/vc_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/close_icn"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
</RelativeLayout>