<?xml version="1.0" encoding="utf-8"?>
<com.cqyw.smart.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white2">

    <!-- action bar-->
    <android.support.percent.PercentRelativeLayout
        style="@style/actionBar_style"
        app:layout_heightPercent="8%p">
        <ImageView
            android:id="@+id/send_request_back"
            style="@style/actionBar_back_style"
            app:layout_heightPercent="50%p"/>
        <View
            android:layout_toRightOf="@id/send_request_back"
            style="@style/actionBar_divider_style"
            app:layout_heightPercent="55%p"
            app:layout_marginLeftPercent="1%p"
            app:layout_marginRightPercent="2%p"/>
    </android.support.percent.PercentRelativeLayout>

    <com.cqyw.smart.view.PercentLinearLayout
        style="@style/PercentWidthPercentHeight"
        app:layout_widthPercent="80%p"
        app:layout_heightPercent="30%p"
        app:layout_marginTopPercent="5%"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray_dark"
            android:text="你需要发送验证申请，等待对方通过"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/send_request_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="10%p"
            android:backgroundTint="@color/theme_color"
            android:text="我是"/>
        <Button
            android:id="@+id/send_request_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_widthPercent="40%"
            android:background="@drawable/rounded_green_bg"
            android:text="发送"
            android:textColor="@drawable/btn_white_text_color"
            app:layout_marginTopPercent="20%"
            android:layout_gravity="right"
            />
    </com.cqyw.smart.view.PercentLinearLayout>
</com.cqyw.smart.view.PercentLinearLayout>